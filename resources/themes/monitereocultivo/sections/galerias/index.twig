{% extends 'templates/default.twig' %}

{% block content %}
  <div id="content">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="heading">
            <h2>{{section.title}}</h2>
          </div>
          <p class="lead">
            {{section.content | striptags('<h1><b><i><s>') }}
          </p>
        </div>
      </div>

      <div class="row portfolio">
        {% for item in data %}
          <div class="col-sm-6 col-md-3">
            <div class="box-image">
              <div class="image">
                {% set image = item.images.first() %}
                <img src="{{base_url()}}/img/upload/{{image.name}}" alt="{{image.name}}" class="img-responsive">
              </div>
              <div class="bg"></div>
              <div class="name">
                <h3>{{item.title}}</h3>
              </div>
              <div class="text">
                <p class="buttons">
                    <a href="{{base_url()}}/galeria_de_fotos/{{item.id}}" class="btn btn-template-transparent-primary btn-block">Ver</a>
                </p>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
{% endblock %}
